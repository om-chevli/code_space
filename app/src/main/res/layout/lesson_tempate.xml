<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_lesson_shape"
    android:backgroundTint="@color/colorPrimary"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/imageview_lessonNumber"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/one"/>

        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="85dp"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_lessonTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Lesson Topic"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textview_lessonLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:text="Lesson Length"
                 />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageview_lessonComplete"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="8dp"
            android:visibility="invisible"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/check"/>

    </LinearLayout>


</LinearLayout>